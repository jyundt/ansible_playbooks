worker_processes  auto;
events {
    worker_connections  1024;
}
http {
    include       mime.types;
    default_type  application/octet-stream;
    sendfile        on;
    tcp_nopush      on;
    tcp_nodelay     on;
    keepalive_timeout  0;
    server {
        listen       80;
        server_name  {{ inventory_hostname }};
        location / {
            root   /pxe;
            autoindex on;
        }
    }
}
